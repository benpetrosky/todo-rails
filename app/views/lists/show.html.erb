<% content_for(:title, "Lists | To Do") %>

<h1 id="test">  <%= @list.name %> </h1>

<% if @list.tasks.any? %>
  <h4>Here are the tasks for this list:</h4>

<%= image_tag "ben's sunday.png", :id => "coffee_pic" %>

  <ul>
    <% @list.tasks.each do |task| %>
      <li>
        <%= task.description %> |
        <%= task.done_tasks %> |
        <%= link_to "Done" ,
          list_task_path(@list, task, :task => {"description"=>"done_tasks"}),
          :data => {:confirm => "Did you complete this task?",
          :method => "patch"} %>
        <%= link_to "Edit", edit_list_task_path(@list, task) %> |
        <%= link_to "Delete", list_task_path(@list, task),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no tasks yet!</p>
<% end %>

<p><%= link_to "Add a task", new_list_task_path(@list) %></p>
<p><%= link_to "Delete List", list_path(@list),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to lists", lists_path %></p>
